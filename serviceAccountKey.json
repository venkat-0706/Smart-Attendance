{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Smart Attendance (recognizer.py)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/recognizer.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONUNBUFFERED": "1"
      },
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Run Any Python File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
